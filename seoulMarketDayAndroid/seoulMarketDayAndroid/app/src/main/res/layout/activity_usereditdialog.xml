<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/border_gray_bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_usereditdialog_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/toolbar_close" />

        <TextView
            android:id="@+id/tv_usereditdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/defaultTextColor" />

        <TextView
            android:id="@+id/tv_usereditdialog_submit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center"
            android:text="완료"
            android:textColor="@color/darkGray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_usereditdialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/darkGray"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_usereditdialog_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_usereditdialog_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView31"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/pointColor" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tv_usereditdialog_textmaxsize"
                android:gravity="center"
                android:text=" / "
                android:textColor="@color/pointColor" />

            <TextView
                android:id="@+id/tv_usereditdialog_textmaxsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/pointColor" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/et_usereditdialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_gray"
            android:ems="10"
            android:inputType="textMultiLine"
            android:minHeight="50dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/defaultTextColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_usereditdialog_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/all_close" />
    </FrameLayout>

</LinearLayout>