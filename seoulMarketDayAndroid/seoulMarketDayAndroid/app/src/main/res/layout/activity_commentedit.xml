<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/in_commentedit_toolbar"
        layout="@layout/toolbar_all_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_commentedit_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp" />

        <EditText
            android:id="@+id/et_commentedit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/border_gray"
            android:ems="10"
            android:inputType="textMultiLine"
            android:minHeight="40dp"
            android:padding="8dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_commentedit_submit"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/all_roundbox_pointcolorfill_r10"
                android:text="등록"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_commentedit_cancel"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/all_roundbox_grayfill_r10"
                android:text="취소"
                android:textColor="@color/defaultTextColor"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>