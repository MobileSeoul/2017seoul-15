<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_followingmerchant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray_bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_followingmerchant_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="12dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_followingmerchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/iv_followingmerchant_follow"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/all_follow"
                android:tint="@color/darkGray"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_followingmerchant_followcancel"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/all_followcancel"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>