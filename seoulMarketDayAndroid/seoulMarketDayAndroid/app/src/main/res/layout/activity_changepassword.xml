<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/in_changepassword_toolbar"
            layout="@layout/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="현재 비밀번호"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_changepassword_currentpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gray_bottom"
                    android:ems="10"
                    android:hint="현재 비밀번호를 입력해주세요."
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:textColor="@color/defaultTextColor"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="새로운 비밀번호"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_changepassword_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gray_bottom"
                    android:ems="10"
                    android:hint="새로운 비밀번호를 입력해주세요."
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:textColor="@color/defaultTextColor"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="비밀번호 확인"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_changepassword_newpasswordconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gray_bottom"
                    android:ems="10"
                    android:hint="새로운 비밀번호를 다시 입력해주세요."
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:textColor="@color/defaultTextColor"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_changepassword"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:background="@drawable/all_roundbox_grayfill_r10"
            android:text="비밀번호 설정 완료"
            android:textColor="@color/darkGray" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>